{
	"name": "Markdown",
	"defaultContent": "# Markdown",
	"extensions": ["md", "markdown"],
	"defaultExtension": "md",
	"shortcuts": {
		"bold": 		{ "left" : "**", "right" : "**" },
		"italic":		{ "left" : "_", "right" : "_" },
		"image":		{ "left" : "![", "right" : "]()", "cursorOffset": { "value": 1, "fromLeft": false } },
		"link":			{ "left" : "[", "right" : "]()", "cursorOffset": { "value": 1, "fromLeft": false } },
		"code":			{ "left" : "`", "right" : "`" },	
		"h1":			{ "left" : "# ", "right" : "" },
		"h2":			{ "left" : "## ", "right" : "" },
		"h3":			{ "left" : "### ", "right" : "" },
		"quote":		{ "left" : "> ", "right" : "", "cursorOffset": { "wrapAtBeginningOfLine": true } },
		"ordered":		{ "left" : "1. ", "right" : "", "cursorOffset": { "wrapAtBeginningOfLine": true } },
		"unordered":	{ "left" : "-  ", "right" : "", "cursorOffset": { "wrapAtBeginningOfLine": true } },
		"hr":			{ "left" : "----------", "right" : "" }
	}
}